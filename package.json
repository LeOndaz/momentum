{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "new-project",
  "title": "New Project",
  "description": "Create a new project and open it in your favourite editor",
  "icon": "command-icon.png",
  "author": "leondaz",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "project-empty",
      "title": "Create an Empty Project",
      "description": "Create an Empty project",
      "mode": "no-view",
      "arguments": [
        {
          "name": "projectName",
          "placeholder": "my_new_project",
          "type": "text",
          "required": true
        }
      ],
      "preferences": [
        {
          "name": "pkgManager",
          "title": "Default package Manager",
          "placeholder": "npm",
          "description": "Package Manager",
          "default": "npm",
          "required": true,
          "type": "dropdown",
          "data": [
            {
              "title": "npm",
              "value": "npm"
            },
            {
              "title": "yarn",
              "value": "yarn"
            },
            {
              "title": "pnpm",
              "value": "pnpm"
            },
            {
              "title": "bun",
              "value": "bun"
            }
          ]
        },
        {
          "title": "Preferred IDE",
          "name": "editor",
          "type": "appPicker",
          "placeholder": "code",
          "default": "Visual Studio Code",
          "description": "Choose your favourite IDE",
          "required": true
        },
        {
          "name": "projectsLocation",
          "title": "Projects location",
          "default": "~/projects",
          "required": true,
          "description": "Location to save your newly created projects",
          "type": "directory",
          "placeholder": "~/projects"
        }
      ]
    },
    {
      "name": "project-node",
      "title": "Create Node Project",
      "description": "Create a Node.js project",
      "mode": "no-view",
      "arguments": [
        {
          "name": "projectName",
          "placeholder": "my_new_project",
          "type": "text",
          "required": true
        }
      ],
      "preferences": [
        {
          "name": "pkgManager",
          "title": "Default package Manager",
          "placeholder": "npm",
          "description": "Package Manager",
          "default": "npm",
          "required": true,
          "type": "dropdown",
          "data": [
            {
              "title": "npm",
              "value": "npm"
            },
            {
              "title": "yarn",
              "value": "yarn"
            },
            {
              "title": "pnpm",
              "value": "pnpm"
            },
            {
              "title": "bun",
              "value": "bun"
            }
          ]
        },
        {
          "title": "Preferred IDE",
          "name": "editor",
          "type": "appPicker",
          "placeholder": "code",
          "default": "Visual Studio Code",
          "description": "Choose your favourite IDE",
          "required": true
        },
        {
          "name": "projectsLocation",
          "title": "Projects location",
          "default": "~/projects",
          "required": true,
          "description": "Location to save your newly created projects",
          "type": "directory",
          "placeholder": "~/projects"
        },
        {
          "name": "eslint",
          "label": "Adds Eslint",
          "title": "Linting",
          "description": "Add Eslint @recommended to the newly created project",
          "default": true,
          "required": true,
          "type": "checkbox"
        },
        {
          "name": "typescript",
          "type": "checkbox",
          "title": "Use Typescript",
          "description": "Use Typescript instead of Javascript",
          "default": true,
          "required": true,
          "label": "Use Typescript"
        }
      ]
    },
    {
      "name": "project-react",
      "title": "Create React Project in JS",
      "description": "Create a project based on React & Javascript",
      "mode": "no-view",
      "keywords": [
        "react",
        "js",
        "ts",
        "javascript",
        "typescript"
      ],
      "arguments": [
        {
          "name": "projectName",
          "placeholder": "my_new_project",
          "type": "text",
          "required": true
        }
      ],
      "preferences": [
        {
          "name": "typescript",
          "type": "checkbox",
          "title": "Use Typescript",
          "description": "Use Typescript instead of Javascript",
          "default": true,
          "required": true,
          "label": "Use Typescript"
        },
        {
          "name": "pkgManager",
          "title": "Default package Manager",
          "placeholder": "npm",
          "description": "Package Manager",
          "default": "npm",
          "required": true,
          "type": "dropdown",
          "data": [
            {
              "title": "npm",
              "value": "npm"
            },
            {
              "title": "yarn",
              "value": "yarn"
            },
            {
              "title": "pnpm",
              "value": "pnpm"
            },
            {
              "title": "bun",
              "value": "bun"
            }
          ]
        },
        {
          "title": "Preferred IDE",
          "name": "editor",
          "type": "appPicker",
          "placeholder": "code",
          "default": "Visual Studio Code",
          "description": "Choose your favourite IDE",
          "required": true
        },
        {
          "name": "projectsLocation",
          "title": "Projects location",
          "default": "~/projects",
          "required": true,
          "description": "Location to save your newly created projects",
          "type": "directory",
          "placeholder": "~/projects"
        },
        {
          "name": "eslint",
          "label": "Adds Eslint",
          "title": "Linting",
          "description": "Add Eslint @recommended to the newly created project",
          "default": true,
          "required": true,
          "type": "checkbox"
        }
      ]
    },
    {
      "name": "project-next",
      "title": "Create Next Project in JS",
      "description": "Create a project based on Next & Javascript",
      "mode": "no-view",
      "keywords": [
        "react",
        "next",
        "js",
        "ts",
        "javascript",
        "typescript"
      ]
    },
    {
      "name": "project-vue",
      "title": "Create Vue Project in JS",
      "description": "Create a project based on Vue & Javascript",
      "mode": "no-view",
      "keywords": [
        "vue",
        "js",
        "ts",
        "javascript",
        "typescript"
      ],
      "arguments": [
        {
          "name": "projectName",
          "placeholder": "my_new_project",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "project-python",
      "title": "Create Python Project",
      "description": "Create a project based on Python",
      "mode": "no-view",
      "keywords": [
        "python"
      ],
      "arguments": [
        {
          "name": "projectName",
          "placeholder": "my_new_project",
          "type": "text",
          "required": true
        }
      ],
      "preferences": [
        {
          "name": "poetry",
          "label": "Use Poetry",
          "title": "Poetry",
          "description": "Use Poetry instead of Pip",
          "type": "checkbox",
          "default": true,
          "required": true
        },
        {
          "name": "formatter",
          "title": "Formatter",
          "description": "Formatter",
          "default": "ruff",
          "required": true,
          "type": "dropdown",
          "data": [
            {
              "title": "ruff",
              "value": "ruff"
            },
            {
              "title": "black",
              "value": "black"
            }
          ]
        }
      ]
    },
    {
      "name": "project-django",
      "title": "Create Django Project",
      "description": "Create a project based on Django",
      "mode": "no-view",
      "keywords": [
        "django",
        "python"
      ],
      "arguments": [
        {
          "name": "projectName",
          "placeholder": "my_new_project",
          "type": "text",
          "required": true
        }
      ],
      "preferences": [
        {
          "name": "createDrfTemplate",
          "label": "Create a DRF template",
          "title": "DRF",
          "description": "Add Django Rest Framework to the newly created project",
          "default": true,
          "required": true,
          "type": "checkbox"
        },
        {
          "name": "graphQLbasedTemplate",
          "label": "Create a GraphQL template",
          "title": "GraphQL",
          "description": "Add GraphQL to the newly created project",
          "default": true,
          "required": true,
          "type": "checkbox"
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "showEditorFirst",
      "title": "Show editor before setup is finished",
      "label": "Show editor first",
      "description": "Opens the editor set for the command before the command finishes running",
      "required": false,
      "default": true,
      "type": "checkbox"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.67.1",
    "handlebars": "^4.7.8",
    "zx": "^7.2.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/eslint": "^8.56.2",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "@types/handlebars": "^4.1.0",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "generate-templates": "node ./scripts/generateTypes.js",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
